<p id="notice"><%= notice %></p>

<h1>Listing Equipment</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Cost</th>
      <th>Buy Date</th>
      <th>Desc</th>
      <th>Room</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= euro equipment.cost %></td>
        <td><%= equipment.buy_date %></td>
        <td><%= equipment.description %></td>
        <td><%= equipment.room.type %></td>
        <td><%= link_to image_tag(equipment.image, size:"150x100") %></td>
        <td><%= link_to 'Show', equipment %>
        <%= link_to 'Edit', edit_equipment_path(equipment) %>
        <%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

