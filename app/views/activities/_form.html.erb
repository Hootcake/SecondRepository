	</div> 
	<div class = "controls">
    <%= f.date_select :class_date %>
  </div>
  <div class="control-group">
    <%= f.label :size, :class => "control-label" %><br>
	</div>
	<div class ="controls">
    <%= f.number_field :size, placeholder: "Maximum Size" %>
  </div>
  <div class="control-group">
    <%= f.label :duration, :class => "control-label"  %><br>
	</div>
	<div class = "controls"> 
    <%= f.number_field :duration, placeholder: "In Minutes" %>
  </div>
  <div class="control-group">
    <%= f.label :room_id, :class => "control-label"  %><br>
	</div>
	<div class = controls>
	<%= f.collection_select :room_id, Room.all, :id, :type %>
  </div>
