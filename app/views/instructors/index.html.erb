
<h1>Listing Instructors</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Certification</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Age</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>Username</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.certification %></td>
        <td><%= instructor.name %></td>
        <td><%= instructor.surname %></td>
        <td><%= age instructor.date_of_birth %></td>
        <td><%= instructor.phone_number %></td>
        <td><%= instructor.address %></td>
        <td><%= instructor.username %></td>
        <td><%= link_to image_tag(instructor.image, size:"150x100") %></td>
        <td><%= link_to 'Show', instructor %>
        <%= link_to 'Edit', edit_instructor_path(instructor) %>
        <%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instructor', new_instructor_path %>
